
@{
    Layout = null;
    ViewBag.Section = "TechnicalAnalysis";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f9fafb;
        }

        .container {
            display: flex;
        }

        .sidebar {
            width: 220px;
            background-color: #ffffff;
            padding: 20px;
            border-right: 1px solid #e5e7eb;
            height: 100vh;
        }

            .sidebar h2 {
                font-size: 22px;
                margin-bottom: 30px;
            }

        .nav {
            list-style-type: none;
            padding: 0;
        }

            .nav li {
                margin-bottom: 15px;
            }

            .nav a {
                text-decoration: none;
                color: #374151;
                font-size: 15px;
                display: flex;
                align-items: center;
            }

                .nav a:hover,
                .nav .active a {
                    color: #2563eb;
                    font-weight: bold;
                }

        .main {
            padding: 40px;
            flex-grow: 1;
        }

            .main h1 {
                font-size: 26px;
                margin-bottom: 30px;
            }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .card {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            border: 1px solid #e5e7eb;
        }

            .card h3 {
                margin-top: 0;
                margin-bottom: 10px;
                font-size: 18px;
            }

            .card p {
                margin: 0;
                color: #6b7280;
            }
    </style>
</head>
<body>
    <div style="display: flex;">
        @Html.Partial("~/Views/Shared/_Sidebar.cshtml")

        <div style="flex-grow: 1; padding: 40px;">
            <h1 style="font-size: 28px; margin-bottom: 30px;">Technical Analysis</h1>

            <!-- Barre de sélection -->
            <div style="display: flex; flex-wrap: wrap; align-items: center; gap: 10px; margin-bottom: 30px;">
                <select style="padding: 8px 12px; border-radius: 6px; border: 1px solid #d1d5db;">
                    <option>GOLD</option>
                </select>
                <select style="padding: 8px 12px; border-radius: 6px; border: 1px solid #d1d5db;">
                    <option>1D</option>
                </select>
                <input type="date" value="2023-07-31" style="padding: 8px 10px; border-radius: 6px; border: 1px solid #d1d5db;" />
                <span style="font-weight: bold;">→</span>
                <input type="date" value="2023-07-31" style="padding: 8px 10px; border-radius: 6px; border: 1px solid #d1d5db;" />
                <button style="background: linear-gradient(to right, #4f46e5, #3b82f6); color: white; padding: 10px 16px; border: none; border-radius: 6px; font-weight: bold; margin-left: auto;">
                    Analyze in Detail
                </button>
            </div>

            <!-- Bloc principal : graphique à gauche, recommandations à droite -->
            <div style="display: flex; gap: 30px; align-items: flex-start; flex-wrap: wrap;">
                <!-- Colonne gauche -->
                <div style="flex: 1 1 60%;">
                    <div style="background: white; border-radius: 10px; border: 1px solid #e5e7eb; padding: 10px;">
                        <img src="~/Content/images/technical-analysis-chart.png" alt="Technical Chart" style="width: 100%; height: auto; display: block;" />
                    </div>

                    <!-- Combined Signals -->
                    <div style="margin-top: 30px;">
                        <h3 style="margin-bottom: 15px;">Combined Signals Detected</h3>
                        <ul style="padding-left: 20px; margin-top: 0; line-height: 1.8;">
                            <li style="color: #16a34a;">✅ RSI crossover above 50</li>
                            <li style="color: #16a34a;">✅ MACD bullish crossover</li>
                            <li style="color: #16a34a;">✅ 20-Day MA rising</li>
                            <li style="color: #16a34a;">✅ Bullish engulfing</li>
                        </ul>
                    </div>
                </div>

                <!-- Colonne droite -->
                <div style="flex: 1 1 300px; display: flex; flex-direction: column; gap: 20px;">
                    <div class="card">
                        <h3>Recommendation</h3>
                        <p style="font-size: 26px; color: #065f46; font-weight: bold; margin: 0;">BUY</p>
                        <p style="margin-top: 10px;">
                            <strong>Patterns Detected</strong><br />
                            Double Bottom<br />
                            Bullish Engulfing
                        </p>
                    </div>

                    <div class="card">
                        <h3>Proposed Strategy</h3>
                        <p><strong>Entry:</strong> 1985</p>
                        <p><strong>Stop-Loss:</strong> 1945</p>
                        <p><strong>Take-Profit:</strong> 2040</p>
                        <p><strong>Risk Reward:</strong> 50:140</p>
                    </div>

                    <div class="card">
                        <h3>Patterns + Indicators</h3>
                        <p>Total Trades: <strong>57%</strong></p>
                        <p>Win Rate: <strong>62%</strong></p>
                        <p>Precision: <strong>64%</strong></p>
                    </div>
                </div>
            </div>



        </div>
    </div>
</body>
</html>
