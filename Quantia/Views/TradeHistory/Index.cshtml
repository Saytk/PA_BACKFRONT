
@{
    Layout = null;
    ViewBag.Section = "TradeHistory";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Trade History</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f9fafb;
        }

        .main {
            padding: 40px;
            flex-grow: 1;
        }

        .table-card {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            border: 1px solid #e5e7eb;
            margin-top: 30px;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
        }

        th, td {
            padding: 12px 16px;
            text-align: left;
            border-bottom: 1px solid #e5e7eb;
        }

        th {
            background-color: #f3f4f6;
            font-weight: 600;
        }

        .status-win {
            color: #16a34a;
            font-weight: bold;
        }

        .status-loss {
            color: #dc2626;
            font-weight: bold;
        }

        .badge-buy {
            background-color: #dbeafe;
            color: #2563eb;
            padding: 4px 8px;
            border-radius: 6px;
            font-size: 12px;
            font-weight: bold;
        }

        .badge-sell {
            background-color: #fee2e2;
            color: #b91c1c;
            padding: 4px 8px;
            border-radius: 6px;
            font-size: 12px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div style="display: flex;">
        @Html.Partial("~/Views/Shared/_Sidebar.cshtml")

        <div class="main">
            <h1 style="font-size: 28px;">Trade History</h1>
            <p style="color: #6b7280;">Here is the list of your recent trades and their performance summary.</p>

            <div class="table-card">
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Asset</th>
                            <th>Type</th>
                            <th>Entry</th>
                            <th>Exit</th>
                            <th>Profit / Loss</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>01/05/2025</td>
                            <td>GOLD</td>
                            <td><span class="badge-buy">BUY</span></td>
                            <td>1980</td>
                            <td>2045</td>
                            <td>+65</td>
                            <td class="status-win">WIN</td>
                        </tr>
                        <tr>
                            <td>27/04/2025</td>
                            <td>GOLD</td>
                            <td><span class="badge-sell">SELL</span></td>
                            <td>2025</td>
                            <td>1990</td>
                            <td>+35</td>
                            <td class="status-win">WIN</td>
                        </tr>
                        <tr>
                            <td>22/04/2025</td>
                            <td>GOLD</td>
                            <td><span class="badge-buy">BUY</span></td>
                            <td>1950</td>
                            <td>1920</td>
                            <td>-30</td>
                            <td class="status-loss">LOSS</td>
                        </tr>
                        <!-- Ajoute d'autres lignes ici -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
